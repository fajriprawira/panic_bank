<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />

    <title>Dashboard - Your Best Panic Bank</title>

    <!-- Tailwind CSS -->
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet" />
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet" />
    <link href="style/main.css" rel="stylesheet" />
  </head>

  <body>
    <div class="page-dashboard flex">
      <div id="wrapper" data-aos="fade-right" class="flex flex-col md:flex-row w-full">
        <!-- Sidebar -->
        <div id="sidebar-wrapper" class="bg-gray-200 p-4 md:w-1/4">
          <div class="sidebar-heading text-center mb-4">
            <img src="/images/dashboard-store-logo.svg" alt="Dashboard Logo" class="my-4 mx-auto" />
          </div>
          <div class="list-group">
            <a href="/dashboard" class="block py-2 px-4 bg-blue-500 text-white rounded-md mb-2">Dashboard</a>
            <a href="/dashboard/rekening" class="block py-2 px-4 bg-white text-gray-700 rounded-md mb-2">My Rekening</a>
            <a href="/dashboard/transactions" class="block py-2 px-4 bg-white text-gray-700 rounded-md mb-2">Transactions</a>
            <a href="/dashboard/account" class="block py-2 px-4 bg-white text-gray-700 rounded-md mb-2">My Account</a>
          </div>
        </div>
        <!-- /#sidebar-wrapper -->

        <!-- Page Content -->
        <div id="page-content-wrapper" class="flex-1 p-4">
          <nav class="bg-white shadow-md p-4 flex justify-between items-center" data-aos="fade-down">
            <button id="menu-toggle" class="block md:hidden bg-gray-300 p-2 rounded-md">
              &laquo; Menu
            </button>

            <div class="hidden md:flex items-center">
              <ul class="flex space-x-4">
                <li class="relative">
                  <a href="#" id="navbarDropdown" class="flex items-center space-x-2">
                  </a>
                  <div class="absolute right-0 mt-2 w-48 bg-white border rounded-md shadow-lg hidden" aria-labelledby="navbarDropdown">
                    <div class="py-2">
                      <a href="/" class="block px-4 py-2 text-gray-800">Logout</a>
                    </div>
                  </div>
                </li>
                <li>
                  <a href="#" class="flex items-center">
                    <img src="/images/icon-cart-empty.svg" alt="Cart" class="w-6 h-6" />
                  </a>
                </li>
              </ul>
            </div>

            <!-- Mobile Menu -->
            
          </nav>

          <div class="section-content section-dashboard-home mt-4" data-aos="fade-up">
            <div class="container-fluid">
              <div class="dashboard-heading">
                <h2 class="text-2xl font-bold">Dashboard</h2>
                <p class="text-gray-700">Look what you have made today!</p>
              </div>
              <div class="dashboard-content">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mt-4">
                  <div class="bg-white p-4 shadow rounded-md">
                    <div class="text-lg font-semibold">Money</div>
                    <div class="text-gray-700">Rp.1.500.000</div>
                  </div>
                  <div class="bg-white p-4 shadow rounded-md">
                    <div class="text-lg font-semibold">Transaction</div>
                    <div class="text-gray-700">0</div>
                  </div>
                </div>
                <div class="mt-6">
                  <h5 class="text-lg font-semibold mb-3">Recent Transactions</h5>
                  <div class="overflow-x-auto">
                    
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- /#page-content-wrapper -->
      </div>
    </div>
    <!-- AOS JS -->
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
      AOS.init();
    </script>
    <!-- Menu Toggle Script -->
    <script>
      document.getElementById("menu-toggle").addEventListener("click", function (e) {
        e.preventDefault();
        document.getElementById("wrapper").classList.toggle("toggled");
      });
    </script>
  </body>
</html>
