<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <meta name="description" content="" />
    <meta name="author" content="" />

    <title>Dashboard - Your Panic Bank</title>

    <!-- Tailwind CSS -->
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet" />
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet" />
    <link href="style/main.css" rel="stylesheet" />
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }
        table, th, td {
            border: 1px solid black;
        }
        th, td {
            padding: 15px;
            text-align: left;
        }
        th {
            background-color: rgb(174, 86, 53);
            color: white;
        }
        .filter-buttons {
            margin-bottom: 20px;
        }
        .filter-buttons a {
            margin-right: 10px;
            text-decoration: none;
            padding: 10px 20px;
            background-color: rgb(115, 67, 22);
            color: white;
            border: none;
            cursor: pointer;
        }
        .filter-buttons a:hover {
            background-color: rgb(147, 82, 8);
        }
    </style>
  </head>

  <body class="bg-gray-100">
    <div class="page-dashboard">
      <div class="flex" id="wrapper" data-aos="fade-right">
        <!-- Sidebar -->
        <div class="border-r border-gray-200 w-64 p-4" id="sidebar-wrapper">
          <div class="sidebar-heading text-center">
            <img src="/images/dashboard-store-logo.svg" alt="" class="my-4 mx-auto" />
          </div>
          <div class="list-group list-group-flush">
            <a
              href="/dashboard"
              class="block py-2 px-4 bg-blue-500 text-white rounded-md mb-2"
              >Dashboard</a
            >
            <a
              href="/dashboard/rekening"
              class="block py-2 px-4 bg-white text-gray-700 rounded-md mb-2"
              >My Rekening</a
            >
            <a
              href="/dashboard/transactions"
              class="block py-2 px-4 bg-white text-gray-700 rounded-md mb-2"
              >Transactions</a
            >
            <a
              href="/dashboard/account"
              class="block py-2 px-4 bg-white text-gray-700 rounded-md mb-2"
              >My Account</a
            >
          </div>
        </div>
        <!-- /#sidebar-wrapper -->

        <!-- Page Content -->
        <div class="flex-1 p-6" id="page-content-wrapper">
          <nav
            class="bg-white shadow-md p-4 flex justify-between items-center"
            data-aos="fade-down"
          >
            <button
              class="bg-gray-300 p-2 rounded-md md:hidden"
              id="menu-toggle"
            >
              &laquo; Menu
            </button>

            <div class="hidden md:flex items-center">
              <ul class="flex space-x-4">
                <li class="relative">
                  <a
                    class="flex items-center space-x-2"
                    href="#"
                    id="navbarDropdown"
                    role="button"
                    aria-haspopup="true"
                    aria-expanded="false"
                  >
                  </a>
                  <div class="absolute right-0 mt-2 w-48 bg-white border rounded-md shadow-lg hidden" aria-labelledby="navbarDropdown">
                    <a class="block px-4 py-2 text-gray-800" href="/dashboard-account.html"
                      >Settings</a
                    >
                    <div class="border-t my-1"></div>
                    <a class="block px-4 py-2 text-gray-800" href="/">Logout</a>
                  </div>
                </li>
                <li>
                  <a class="flex items-center" href="#">
                    <img src="/images/icon-cart-empty.svg" alt="" class="w-6 h-6" />
                  </a>
                </li>
              </ul>
            </div>

            <!-- Mobile Menu -->
            <ul class="md:hidden mt-3 space-y-3">
              <li>
                <a class="block" href="#">Hi, Angga</a>
              </li>
              <li>
                <a class="block" href="#">Cart</a>
              </li>
            </ul>
          </nav>

          <div
            class="section-content section-dashboard-home mt-4"
            data-aos="fade-up"
          >
            <div class="container-fluid">
              <div class="dashboard-heading">
                <h2 class="text-2xl font-bold">My Rekening</h2>
                <p class="text-gray-700">Manage it well and get money</p>
              </div>
              <div class="dashboard-content">
                <div class="filter-buttons mb-4">
                  <a href="/dashboard/rekening/add" class="inline-block bg-blue-500 text-white py-2 px-4 rounded-md">Add New Rekening</a>
                </div>
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
                  <% rekenings.forEach(function(rekening) { %>
                    <a
                      class="block bg-white shadow rounded-md p-4 hover:shadow-lg transition"
                      href=""
                    >
                      <div class="product-title text-lg font-bold"><%= rekening.noAccount %></div>
                      <div class="product-category text-gray-600">Rp.<%= rekening.amount %></div>
                    </a>
                  <% }); %>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- /#page-content-wrapper -->
      </div>
    </div>
    <!-- AOS JS -->
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
      AOS.init();
    </script>
    <!-- Menu Toggle Script -->
    <script>
      document.getElementById("menu-toggle").addEventListener("click", function (e) {
        e.preventDefault();
        document.getElementById("wrapper").classList.toggle("toggled");
      });
    </script>
  </body>
</html>
