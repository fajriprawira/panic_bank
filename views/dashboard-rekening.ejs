<!DOCTYPE html>
<html>
<head>
  <title>My Rekening</title>
  <!-- Bootstrap CSS -->
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <!-- Custom CSS -->
  <style>
    body {
      background-color: #f8f9fa;
    }
    .container {
      margin-top: 50px;
    }
    table {
      width: 100%;
      margin-top: 20px;
    }
    th, td {
      text-align: center;
      padding: 10px;
    }
    th {
      background-color: #007bff;
      color: white;
    }
    td {
      background-color: #ffffff;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1 class="text-center">My Rekening</h1>
    <div class="text-right mb-3">
      <a href="/dashboard/rekening/add" class="btn btn-primary">Add New Rekening</a>
    </div>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>No Account</th>
          <th>Amount</th>
        </tr>
      </thead>
      <tbody>
        <% rekenings.forEach(function(rekening) { %>
        <tr>
          <td><%= rekening.noAccount %></td>
          <td><%= rekening.amount %></td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
  <!-- Bootstrap JS and dependencies -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
